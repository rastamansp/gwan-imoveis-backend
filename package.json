{
  "name": "gwan-shop-backend",
  "version": "1.0.0",
  "description": "Backend da plataforma de eventos",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:mcp:stdio": "ts-node src/mcp/server-stdio.ts",
    "start:mcp:sse": "ts-node src/mcp/server-sse.ts",
    "build:mcp": "tsc -p tsconfig.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docs:generate": "node scripts/docs-manager.js generate",
    "docs:validate": "node scripts/docs-manager.js validate",
    "docs:serve": "node scripts/docs-manager.js serve",
    "docs:clean": "node scripts/docs-manager.js clean",
    "docs:watch": "node scripts/docs-manager.js watch",
    "docs:help": "node scripts/docs-manager.js help",
    "deploy:prepare": "npm run build && npm run docs:generate && npm run docs:validate",
    "deploy:prod": "npm run deploy:prepare && echo 'Deploy para produção realizado com sucesso!'",
    "deploy:rollback": "echo 'Rollback executado. Verificar logs para detalhes.'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:clean": "docker-compose down -v --rmi all",
    "portainer:deploy": "./scripts/deploy-portainer.sh deploy",
    "portainer:deploy:prod": "./scripts/deploy-portainer.sh deploy prod",
    "portainer:deploy:dev": "./scripts/deploy-portainer.sh deploy dev",
    "portainer:status": "./scripts/deploy-portainer.sh status",
    "portainer:logs": "./scripts/deploy-portainer.sh logs",
    "portainer:rollback": "./scripts/deploy-portainer.sh rollback",
    "portainer:deploy:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action deploy",
    "portainer:deploy:prod:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action deploy -Environment prod",
    "portainer:deploy:dev:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action deploy -Environment dev",
    "portainer:status:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action status",
    "portainer:logs:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action logs",
    "portainer:rollback:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy-portainer.ps1 -Action rollback",
    "typeorm:migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/config/data-source.ts",
    "typeorm:migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/config/data-source.ts",
    "typeorm:migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/config/data-source.ts",
    "admin:create": "npx ts-node -r tsconfig-paths/register scripts/create-admin.ts",
    "db:seed": "npx ts-node -r tsconfig-paths/register scripts/run-seeder.ts",
    "db:seed:simple": "npx ts-node -r tsconfig-paths/register scripts/simple-seeder.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.12.2",
    "chokidar": "^3.6.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}